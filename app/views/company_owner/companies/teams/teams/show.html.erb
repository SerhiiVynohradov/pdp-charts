<div class="bg-gray-900 text-white min-h-screen p-6">
  <h1 class="text-2xl font-bold mb-4">Team: <%= @team.name %></h1>

  <p class="mb-4">Description: <%= @team.description || "No Description" %></p>
  <p class="mb-4">Status: <%= @team.status.capitalize %></p>

  <!-- Breadcrumbs -->
  <%= breadcrumbs %>

  <!-- Charts Partial (if applicable) -->
  <%= render partial: "shared/pdp_charts", locals: { chart_data: @chart_data } %>

  <!-- Edit Team Form -->
  <div class="mb-6">
    <%= render partial: "shared/teams/form", locals: { team: @team } %>
  </div>

  <!-- Team Members Table -->
  <h2 class="text-xl font-semibold mb-2">Team Members</h2>
  <table class="min-w-full border-collapse bg-gray-800 text-gray-50">
    <thead>
      <tr class="bg-gray-700 border-b border-gray-600">
        <th class="px-4 py-2 text-left">Actions</th>
        <th class="px-4 py-2 text-left">Name</th>
        <th class="px-4 py-2 text-left">Email</th>
        <th class="px-4 py-2 text-left">Role</th>
        <th class="px-4 py-2 text-left">Status</th>
        <th class="px-4 py-2 text-left">Manage</th>
      </tr>
    </thead>
    <tbody id="users-container">
      <% @team.users.each do |user| %>
        <%= render partial: "shared/users/user_row", locals: { user: user, team: @team } %>
      <% end %>
    </tbody>
  </table>
</div>
