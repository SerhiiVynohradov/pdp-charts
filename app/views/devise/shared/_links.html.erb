<div class="space-y-2">
  <% if controller_name != 'sessions' %>
    <div>
      <%= link_to "Увійти", new_session_path(resource_name),
                  class: "text-blue-400 hover:underline" %>
    </div>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "Зареєструватись", new_registration_path(resource_name),
                  class: "text-blue-400 hover:underline" %>
    </div>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "Забули пароль?", new_password_path(resource_name),
                  class: "text-blue-400 hover:underline" %>
    </div>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "Потрібне повторне підтвердження?", new_confirmation_path(resource_name),
                  class: "text-blue-400 hover:underline" %>
    </div>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "Не отримали інструкції для розблокування?", new_unlock_path(resource_name),
                  class: "text-blue-400 hover:underline" %>
    </div>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <div>
        <%= button_to "Увійти через #{OmniAuth::Utils.camelize(provider)}",
                      omniauth_authorize_path(resource_name, provider),
                      data: { turbo: false },
                      class: "text-blue-400 hover:underline" %>
      </div>
    <% end %>
  <% end %>
</div>
