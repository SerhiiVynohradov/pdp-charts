<!-- app/views/devise/sessions/new.html.erb -->
<div class="max-w-md mx-auto mt-10">
  <h2 class="text-2xl font-bold mb-6 text-center text-white">
    Log in
  </h2>

  <div class="bg-gray-800 p-6 rounded shadow-md">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-gray-300" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full mt-1 p-2 bg-gray-900 text-white rounded border border-gray-700" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, class: "block text-gray-300" %>
        <%= f.password_field :password,
              autocomplete: "current-password",
              class: "w-full mt-1 p-2 bg-gray-900 text-white rounded border border-gray-700" %>
      </div>

      <!-- Remember Me (опционально) -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600" %>
          <%= f.label :remember_me, class: "ml-2 text-gray-300" %>
        </div>
      <% end %>

      <!-- Submit button -->
      <div>
        <%= f.submit "Log in",
              class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
