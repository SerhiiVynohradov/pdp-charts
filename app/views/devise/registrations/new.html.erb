<div class="max-w-md mx-auto mt-10">
  <!-- Заголовок -->
  <h2 class="text-2xl font-bold mb-6 text-center text-white">
    Sign up
  </h2>

  <div class="bg-gray-800 p-6 rounded shadow-md">
    <!-- Вывод ошибок (если есть) -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Форма регистрации -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-gray-300" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full mt-1 p-2 bg-gray-900 text-white rounded border border-gray-700" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, class: "block text-gray-300" %>
        <% if @minimum_password_length %>
          <small class="text-gray-400">
            (минимум <%= @minimum_password_length %> символов)
          </small>
        <% end %>
        <%= f.password_field :password,
              autocomplete: "new-password",
              class: "w-full mt-1 p-2 bg-gray-900 text-white rounded border border-gray-700" %>
      </div>

      <!-- Password Confirmation -->
      <div>
        <%= f.label :password_confirmation, class: "block text-gray-300" %>
        <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full mt-1 p-2 bg-gray-900 text-white rounded border border-gray-700" %>
      </div>

      <!-- reCAPTCHA -->
      <div>
        <%= recaptcha_tags %>
      </div>

      <!-- Submit button -->
      <div>
        <%= f.submit "Sign up",
              class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded w-full" %>
      </div>
    <% end %>

    <!-- OAuth-кнопки -->
    <div class="mt-4 text-center">
      <p class="text-gray-300">Or sign up with:</p>
      <div class="flex justify-center space-x-2 mt-2">
        <%= link_to "Google",
              user_google_oauth2_omniauth_authorize_path,
              class: "bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded" %>

        <%= link_to "LinkedIn",
              user_linkedin_omniauth_authorize_path,
              class: "bg-blue-700 hover:bg-blue-800 text-white py-2 px-4 rounded" %>

        <!-- Если нужен Facebook -->
        <!--
        <%= link_to "Facebook",
              user_facebook_omniauth_authorize_path,
              class: "bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded" %>
        -->
      </div>
    </div>

    <!-- Ссылка на логин и т.д. -->
    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
