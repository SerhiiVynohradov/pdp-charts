<div class="max-w-md mx-auto mt-10 bg-gray-900 p-6 rounded shadow-md">
  <h1 class="text-xl font-bold text-white mb-4">Create Company</h1>

  <%= form_with model: @company, url: companies_path, local: true do |f| %>
    <% if @company.errors.any? %>
      <div class="mb-4 bg-red-600 text-white p-3 rounded">
        <p><strong><%= t('labels.errors') %>:</strong></p>
        <ul class="list-disc list-inside">
          <% @company.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :name, t('items_index.name'), class: "block text-gray-400" %>
      <%= f.text_field :name, class: "w-full mt-1 p-2 bg-gray-800 text-white rounded border border-gray-700" %>
    </div>

    <%= f.submit t("buttons.create_company"),
                 class: "bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded" %>
  <% end %>
</div>
