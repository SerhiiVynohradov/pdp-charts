<h1 class="text-2xl mb-4">Team Members for <%= @team.name %></h1>

<!-- A table with columns: Name, Email, Buttons -->
<table class="min-w-full border-collapse bg-gray-800 text-gray-50">
  <thead>
    <tr>
      <th class="px-4 py-2 text-left">Name</th>
      <th class="px-4 py-2 text-left">Email</th>
      <th class="px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td class="px-4 py-2 align-top">
          <%= link_to u.name, manager_team_user_path(@team, u), target: "_blank" %>
        </td>
        <td class="px-4 py-2 align-top">
          <%= u.email %>
        </td>
        <td class="px-4 py-2 align-top text-right space-x-2">
          <%= link_to "Pause PDP", pause_manager_team_user_path(@team, u), method: :patch, class: "bg-yellow-500 text-white px-3 py-1 rounded" %>
          <!-- link to google meet generation? -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add User", new_manager_team_user_path(@team), class: "bg-blue-600 px-3 py-1 rounded" %>
