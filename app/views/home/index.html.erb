<div class="min-h-screen bg-gray-900 text-white flex flex-col">

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-gray-800 to-gray-900 py-20">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <!-- Heading -->
      <h1 class="text-5xl md:text-6xl font-extrabold mb-6 leading-tight">
        <%= t('home.hero.title') %>
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto mb-8">
        <%= t('home.hero.subtitle') %>
      </p>

      <!-- CTA Button -->
      <div class="mt-8">
        <%= link_to t('home.hero.cta'),
                    new_user_registration_path,
                    class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-md shadow-lg transition-transform transform hover:-translate-y-1" %>
      </div>
    </div>
  </section>

  <!-- Tutorials Section -->
  <section class="py-12 bg-gray-800">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Заголовок и подзаголовок -->
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white text-center">
        <%= t('home.tutorials.title') %>
      </h2>
      <p class="text-gray-300 max-w-2xl mx-auto text-center mb-8">
        <%= t('home.tutorials.intro') %>
      </p>

      <!-- 3 колонки (на узком экране будет 1) -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- 1) User interface -->
        <div class="bg-gray-900 p-4 rounded-md shadow-md flex flex-col">
          <div class="aspect-w-16 aspect-h-9 mb-4">
            <iframe
              class="rounded"
              src="https://www.youtube.com/embed/YdLI-nr0zpY"
              title="User Interface Demo"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
            </iframe>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">
            <%= t('home.tutorials.user.title') %>
          </h3>
          <p class="text-gray-300 flex-grow">
            <%= t('home.tutorials.user.description') %>
          </p>
        </div>

        <!-- 2) Manager interface -->
        <div class="bg-gray-900 p-4 rounded-md shadow-md flex flex-col">
          <div class="aspect-w-16 aspect-h-9 mb-4">
            <iframe
              class="rounded"
              src="https://www.youtube.com/embed/28H9TfgIBYE"
              title="Manager Interface Demo"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
            </iframe>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">
            <%= t('home.tutorials.manager.title') %>
          </h3>
          <p class="text-gray-300 flex-grow">
            <%= t('home.tutorials.manager.description') %>
          </p>
        </div>

        <!-- 3) Company Owner interface -->
        <div class="bg-gray-900 p-4 rounded-md shadow-md flex flex-col">
          <div class="aspect-w-16 aspect-h-9 mb-4">
            <iframe
              class="rounded"
              src="https://www.youtube.com/embed/Y7awT7e5No8"
              title="Company Owner Interface Demo"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
            </iframe>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">
            <%= t('home.tutorials.owner.title') %>
          </h3>
          <p class="text-gray-300 flex-grow">
            <%= t('home.tutorials.owner.description') %>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-12 px-4 flex-grow">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-white text-center">
        <%= t('home.benefits.title') %>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Benefit 1 -->
        <div class="bg-gray-800 rounded-lg p-6 shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-semibold text-white mb-3">
            <%= t('home.benefits.items.1.title') %>
          </h3>
          <p class="text-gray-300 leading-relaxed">
            <%= t('home.benefits.items.1.description') %>
          </p>
        </div>
        <!-- Benefit 2 -->
        <div class="bg-gray-800 rounded-lg p-6 shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-semibold text-white mb-3">
            <%= t('home.benefits.items.2.title') %>
          </h3>
          <p class="text-gray-300 leading-relaxed">
            <%= t('home.benefits.items.2.description') %>
          </p>
        </div>
        <!-- Benefit 3 -->
        <div class="bg-gray-800 rounded-lg p-6 shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-semibold text-white mb-3">
            <%= t('home.benefits.items.3.title') %>
          </h3>
          <p class="text-gray-300 leading-relaxed">
            <%= t('home.benefits.items.3.description') %>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- How it works (Short) -->
  <section class="py-12 bg-gray-800">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-white text-center">
        <%= t('home.how_it_works.title') %>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-gray-300">
        <!-- Step 1 -->
        <div class="bg-gray-900 rounded-lg p-6 shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-xl text-white font-semibold mb-3">
            <%= t('home.how_it_works.steps.1.title') %>
          </h3>
          <p class="leading-relaxed">
            <%= t('home.how_it_works.steps.1.description') %>
          </p>
        </div>
        <!-- Step 2 -->
        <div class="bg-gray-900 rounded-lg p-6 shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-xl text-white font-semibold mb-3">
            <%= t('home.how_it_works.steps.2.title') %>
          </h3>
          <p class="leading-relaxed">
            <%= t('home.how_it_works.steps.2.description') %>
          </p>
        </div>
        <!-- Step 3 -->
        <div class="bg-gray-900 rounded-lg p-6 shadow-md hover:shadow-xl transition-shadow">
          <h3 class="text-xl text-white font-semibold mb-3">
            <%= t('home.how_it_works.steps.3.title') %>
          </h3>
          <p class="leading-relaxed">
            <%= t('home.how_it_works.steps.3.description') %>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        <%= t('home.cta_section.title') %>
      </h2>
      <p class="text-gray-300 max-w-xl mx-auto mb-6">
        <%= t('home.cta_section.description') %>
      </p>
      <%= link_to t('home.cta_section.btn_text'),
                  new_user_registration_path,
                  class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-md shadow-lg transition-transform transform hover:-translate-y-1" %>
    </div>
  </section>
</div>
