<nav class="bg-gray-800 py-2 px-4 flex items-center space-x-4">
  <%= link_to "Home", root_path, class: "text-white hover:text-blue-300" %>

  <% if current_user.superadmin? %>
    <%= link_to "Companies", superadmin_companies_path, class: "text-white hover:text-blue-300" %>
    <%= link_to "Categories", superadmin_categories_path, class: "text-white hover:text-blue-300" %>
    <%= link_to "Global Recommended Items", superadmin_recommended_items_path, class: "text-white hover:text-blue-300" %>
    <%= link_to "Payers", superadmin_payers_path, class: "text-white hover:text-blue-300" %>
  <% elsif current_user.company_owner? %>
    <%= link_to "Company Dash", company_owner_root_path, class: "text-white hover:text-blue-300" %>
    <%= link_to "Company Recommended Items", company_owner_company_recommended_items_path(current_user.company), class: "text-white hover:text-blue-300" %>
  <% elsif current_user.manager? %>
    <%= link_to "Manager Dash", manager_root_path, class: "text-white hover:text-blue-300" %>
    <%= link_to "Team Recommended Items", manager_team_recommended_items_path(current_user.team), class: "text-white hover:text-blue-300" %>
  <% else %>
    <%= link_to "My Items", my_items_path, class: "text-white hover:text-blue-300" %>
  <% end %>

  <% if current_user.user? && current_user.team.present? && current_user.team.company.present? && current_user.team.company.charts_visible? %>
    <%= link_to "#{current_user.team.company.name} Statistics", my_company_path(current_user.team.company), class: "text-white hover:text-blue-300" %>
  <% end %>

  <% if current_user.user? && current_user.team.present? && current_user.team.charts_visible? %>
    <%= link_to "#{current_user.team.name} Statistics", my_team_path(current_user.team), class: "text-white hover:text-blue-300" %>
  <% end %>

  <%= link_to "My Settings", edit_my_settings_path, class: "text-white hover:text-blue-300" %>

  <% if current_user.manager? %>
    <%= link_to "My Team Settings", edit_manager_team_path(current_user.team), class: "text-white hover:text-blue-300" %>
  <% end %>

  <% if current_user.company_owner? %>
    <%= link_to "My Company Settings", edit_company_owner_company_path(current_user.company), class: "text-white hover:text-blue-300" %>
  <% end %>

  <%= link_to "Logout", destroy_user_session_path,
      data: { turbo_method: :delete },
      class: "text-white hover:text-blue-300 ml-auto" %>
</nav>
