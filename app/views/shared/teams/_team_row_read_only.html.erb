<%
the_team_path = if @company.present?
                  my_company_team_path(@company, team)
                else
                  my_team_path(team)
                end
%>

<tr id="<%= dom_id(team) %>" class="border-b border-gray-600 hover:bg-gray-700">
  <!-- Actions (Details) -->
  <td class="px-4 py-2 align-top">
    <%= link_to "Details", the_team_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded" %>
  </td>

  <!-- Name (read-only) -->
  <td class="px-4 py-2 align-top">
    <%= team.name.presence || "-" %>
  </td>

  <!-- Status (read-only) -->
  <td class="px-4 py-2 align-top">
    <span class="text-sm <%= team.active? ? 'text-green-500' : 'text-red-500' %>">
      <%= team.active? ? "Active" : "Inactive" %>
    </span>
  </td>

  <!-- Manage Actions (read-only -> нет кнопок) -->
  <td class="px-4 py-2 align-top text-right space-x-2">
    <!-- пусто или только "Details" -->
  </td>
</tr>
