<turbo-stream action="append" target="items-container">
  <template>
    <%= render partial: "shared/items/item_row",
               locals: { item: @item, progress_columns: @user.item_progress_columns.order(date: :asc) },
               formats: [:html] %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="<%= dom_id(Item.new, :new) %>">
  <template>
    <%= render partial: "shared/items/form",
               locals: { item: Item.new },
               formats: [:html] %>
  </template>
</turbo-stream>
