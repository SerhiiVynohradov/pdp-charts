<%= turbo_frame_tag dom_id(progress_update, :edit) do %>
  <%= form_with model: progress_update,
                url: progress_update_path(progress_update),
                method: :patch,
                local: false,
                data: { turbo_frame: dom_id(progress_update, :edit) },
                class: "flex items-center space-x-2 bg-gray-800 p-2 rounded" do |f| %>
    <%= f.number_field :percent, min: 0, max: 100, class: "w-16 rounded bg-gray-700 border border-gray-600 px-2 py-1 text-white" %>
    <%= f.submit t('buttons.save'), class: "bg-blue-600 hover:bg-blue-700 text-white px-2 py-1 rounded" %>
    <%= link_to t('buttons.cancel'), "#", class: "text-red-500 hover:underline", data: { action: "click->cell-edit#cancelEdit" } %>
  <% end %>
<% end %>
