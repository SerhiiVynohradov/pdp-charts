<turbo-stream action="append" target="items-container">
  <template>
    <%= render partial: "item_row",
               locals: { item: @item },
               formats: [:html] %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="<%= dom_id(Item.new, :new) %>">
  <template>
    <%= render partial: "form",
               locals: { item: Item.new },
               formats: [:html] %>
  </template>
</turbo-stream>
