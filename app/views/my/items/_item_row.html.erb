<tr class="border-b border-gray-600 hover:bg-gray-700">
  <!-- NAME Column -->
  <td class="px-4 py-2 align-top">
    <!-- Display State -->
    <span
        data-controller="inline-edit"
        data-action="click->inline-edit#toggleEdit"
        data-inline-edit-target="display">
        <%= item.name %>
    </span>

    <!-- Inline Form (hidden by default) -->
    <div data-inline-edit-target="form" class="hidden">
      <%= form_with model: item, url: my_item_path(item), method: :patch, data: { action: "submit->inline-edit#submit" } do |f| %>
        <%= f.text_field :name, class: "w-full rounded bg-gray-900 border border-gray-500 px-2 py-1 text-white" %>
        <button type="submit" class="ml-2 bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded">Save</button>
      <% end %>
    </div>
  </td>

  <!-- CATEGORY Column -->
  <td class="px-4 py-2 align-top">
    <%= item.category.presence || "-" %>
  </td>

  <!-- PROGRESS Column -->
  <td class="px-4 py-2 align-top">
    <%= item.progress %>%
  </td>

  <!-- ACTIONS Column -->
  <td class="px-4 py-2 align-top text-right space-x-2">
    <%= link_to "Delete", my_item_path(item),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded" %>
  </td>
</tr>
