<div class="max-w-md mx-auto mt-10 bg-gray-900 p-6 rounded shadow-md">
  <h1 class="text-xl font-bold text-white mb-4">Suggestion</h1>

  <div class="mb-4">
    <p class="text-gray-400">Title:</p>
    <p class="text-white"><%= @suggestion.title %></p>
  </div>

  <div class="mb-4">
    <p class="text-gray-400">Description:</p>
    <p class="text-white"><%= @suggestion.description %></p>
  </div>

  <div class="mb-4">
    <p class="text-gray-400">User Name:</p>
    <p class="text-white"><%= @suggestion.user.name %></p>
  </div>

  <div class="mb-4">
    <p class="text-gray-400">User Email:</p>
    <p class="text-white"><%= @suggestion.user.email %></p>
  </div>

  <div class="mb-4">
    <p class="text-gray-400">User Role:</p>
    <p class="text-white"><%= @suggestion.user.role %></p>
  </div>

  <% # buttons to go back to dashboard root path %>
  <div class="mb-4">
    <% if current_user.superadmin? %>
      <%= link_to "Back to Suggestions", suggestions_path, class: "bg-gray-800 text-white px-4 py-2 rounded" %>
    <% end %>

    <%= link_to "Back to Dashboard", root_path, class: "bg-gray-800 text-white px-4 py-2 rounded" %>
  </div>
</div>
