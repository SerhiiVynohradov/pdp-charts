<%= form_with model: category,
              url: category.persisted? ? superadmin_category_path(category) : superadmin_categories_path,
              local: true,
              data: { turbo_frame: dom_id(category, :form) },
              class: "flex flex-col space-y-4 bg-gray-800 text-white p-4 rounded w-full max-w-xl" do |f| %>

  <!-- Name field -->
  <div class="flex flex-col">
    <label class="mb-1 text-sm text-gray-300"><%= t('labels.name') %> </label>
    <%= f.text_field :name,
                     class: "rounded bg-gray-700 border border-gray-600 px-2 py-1 text-white",
                     required: true %>
  </div>

  <!-- Description field -->
  <div class="flex flex-col">
    <label class="mb-1 text-sm text-gray-300"><%= t('labels.description') %></label>
    <%= f.text_area :description,
                    class: "rounded bg-gray-700 border border-gray-600 px-2 py-1 text-white h-24" %>
  </div>

  <!-- Submit -->
  <div>
    <%= f.submit category.persisted? ? t('buttons.update_category') : t('buttons.create_category'),
                 class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
