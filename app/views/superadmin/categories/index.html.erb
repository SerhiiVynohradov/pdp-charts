<%= content_for :page_title, t('labels.categories') %>
<div class="bg-gray-900 text-white min-h-screen p-6">
  <h1 class="text-2xl font-bold mb-4"><%= t('labels.categories') %></h1>

  <div class="mb-4">
    <%= link_to t('buttons.new_category'), new_superadmin_category_path,
                class: "bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded" %>
  </div>

  <% if @categories.any? %>
    <table class="min-w-full border-collapse bg-gray-800 text-gray-50">
      <thead>
        <tr class="bg-gray-700 border-b border-gray-600">
          <th class="px-4 py-2 text-left">ID</th>
          <th class="px-4 py-2 text-left"><%= t('items_index.name') %></th>
          <th class="px-4 py-2 text-left"><%= t('items_index.description') %></th>
          <th class="px-4 py-2 text-left"><%= t('items_index.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr class="border-b border-gray-600 hover:bg-gray-700">
            <td class="px-4 py-2 align-top"><%= category.id %></td>
            <td class="px-4 py-2 align-top"><%= category.name %></td>
            <td class="px-4 py-2 align-top"><%= category.description %></td>
            <td class="px-4 py-2 align-top text-right space-x-2">
              <%= link_to t('buttons.show'), superadmin_category_path(category),
                          class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded" %>
              <%= link_to t('buttons.edit'), edit_superadmin_category_path(category),
                          class: "bg-yellow-600 hover:bg-yellow-700 text-white px-3 py-1 rounded" %>
              <%= link_to t('buttons.delete'), superadmin_category_path(category),
                          data: { turbo_method: :delete, turbo_confirm: t('buttons.are_you_sure') },
                          class: "bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p><%= t('labels.no_categories_found') %></p>
  <% end %>
</div>
