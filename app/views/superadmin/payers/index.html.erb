<div class="space-y-8">

  <!-- SECTION: Self Employed -->
  <div class="bg-gray-800 shadow-md rounded-md p-4">
    <h2 class="text-xl font-bold mb-2">Self Employed</h2>
    <table class="min-w-full border border-gray-600 text-sm">
      <thead class="bg-gray-700 text-gray-200">
        <tr>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Name</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Email</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Invoices</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">New Invoice</th>
        </tr>
      </thead>
      <tbody>
        <% @self_employed.each do |user| %>
          <tr class="border-b border-gray-600 hover:bg-gray-700">
            <td class="px-4 py-2"><%= user.name %></td>
            <td class="px-4 py-2"><%= user.email %></td>
            <td class="px-4 py-2">
              <%= link_to "View Invoices", superadmin_payer_invoices_path(user, invoiceable_type: "User") %>
            </td>
            <td class="px-4 py-2">
              <%= link_to "New Invoice", new_superadmin_payer_invoice_path(user, invoiceable_type: "User") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- SECTION: Managers Without Companies -->
  <div class="bg-gray-800 shadow-md rounded-md p-4">
    <h2 class="text-xl font-bold mb-2">Managers Without Companies (Consultants)</h2>
    <table class="min-w-full border border-gray-600 text-sm">
      <thead class="bg-gray-700 text-gray-200">
        <tr>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Name</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Email</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Invoices</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">New Invoice</th>
        </tr>
      </thead>
      <tbody>
        <% @managers.each do |user| %>
          <tr class="border-b border-gray-600 hover:bg-gray-700">
            <td class="px-4 py-2"><%= user.name %></td>
            <td class="px-4 py-2"><%= user.email %></td>
            <td class="px-4 py-2">
              <%= link_to "View Invoices", superadmin_payer_invoices_path(user, invoiceable_type: "User") %>
            </td>
            <td class="px-4 py-2">
              <%= link_to "New Invoice", new_superadmin_payer_invoice_path(user, invoiceable_type: "User") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- SECTION: Companies -->
  <div class="bg-gray-800 shadow-md rounded-md p-4">
    <h2 class="text-xl font-bold mb-2">Companies</h2>
    <table class="min-w-full border border-gray-600 text-sm">
      <thead class="bg-gray-700 text-gray-200">
        <tr>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Name</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Invoices</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">New Invoice</th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr class="border-b border-gray-600 hover:bg-gray-700">
            <td class="px-4 py-2"><%= company.name %></td>
            <td class="px-4 py-2">
              <%= link_to "View Invoices", superadmin_payer_invoices_path(company, invoiceable_type: "Company") %>
            </td>
            <td class="px-4 py-2">
              <%= link_to "New Invoice", new_superadmin_payer_invoice_path(company, invoiceable_type: "Company") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- SECTION: Paid by the Companies -->
  <div class="bg-gray-800 shadow-md rounded-md p-4">
    <h2 class="text-xl font-bold mb-2">Paid by the companies</h2>
    <table class="min-w-full border border-gray-600 text-sm">
      <thead class="bg-gray-700 text-gray-200">
        <tr>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Name</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Email</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Payer</th>
        </tr>
      </thead>
      <tbody>
        <% @users_paid_by_companies.each do |user| %>
          <tr class="border-b border-gray-600 hover:bg-gray-700">
            <td class="px-4 py-2"><%= user.name %></td>
            <td class="px-4 py-2"><%= user.email %></td>
            <td class="px-4 py-2"><%= user.payer_info %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- SECTION: Paid by the Managers -->
  <div class="bg-gray-800 shadow-md rounded-md p-4">
    <h2 class="text-xl font-bold mb-2">
      Paid by the managers (consultants without companies)
    </h2>
    <table class="min-w-full border border-gray-600 text-sm">
      <thead class="bg-gray-700 text-gray-200">
        <tr>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Name</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Email</th>
          <th class="px-4 py-2 border-b border-gray-600 text-left">Payer</th>
        </tr>
      </thead>
      <tbody>
        <% @users_paid_by_managers.each do |user| %>
          <tr class="border-b border-gray-600 hover:bg-gray-700">
            <td class="px-4 py-2"><%= user.name %></td>
            <td class="px-4 py-2"><%= user.email %></td>
            <td class="px-4 py-2"><%= user.payer_info %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
